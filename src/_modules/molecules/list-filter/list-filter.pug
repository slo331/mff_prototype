include ../../atoms/button/button
include ../../molecules/multi-filter/multi-filter
include ../../molecules/select-dropdown/select-dropdown
include ../../molecules/search/search

mixin list-filter(spec)
	- spec = spec || {}
	- spec.__class = spec.__class || ''
	- spec.filter = spec.filter || ''
	- var button = spec.btnFilter

	.filter(class=spec.__class)&attributes(attributes)
		.filter-wrap(data-filter= (spec.btnFilter == false) ? 'standalone' : 'button')
			each item, index in spec.filter
				if item.type == 'checkbox'
					+multi-filter(item.settings).category-filter

				if item.type == 'select'
					+select-dropdown(item.settings).sortby-filter

				if item.type == 'search'
					+search(item.settings).search-filter
			
			if spec.btnFilter == true
				+button({
					'__text': 'Filter',
					'__type': 'button',
					'__class': 'btn--filter btn--bg'
				})
		
