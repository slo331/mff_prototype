extends ../_layouts/base

include ../_modules/molecules/breadcrumbs/breadcrumbs
include ../_modules/molecules/title/title
include ../_modules/molecules/listing/listing

block config
	//- Correct base url pathing for this page
	- isHome = false
	- var pageTitle = 'Made For Families Stories'
	- var page = 'resources'
	- var site = htmlWebpackPlugin.options //global site data
	- var baseUrl = '../'

block content
	+breadcrumbs({
		'level1': 'Resources',
		'level1URL': '#',
		'level2': 'Made For Families Stories'
	})

	+title({
		'title': 'Made For Families Stories'
	})

	+listing({
		'endpoint': '/api/storiesListing.json',
    'url': 'listing-filter',
    'listType': 'stories',
		'filter': [
			{
				'type': 'checkbox',
				'settings': {
					"name": "category",
					"input": {
						"id": "category",
						"label": "Category",
						"value": "all",
						"valueText": "All"
					},
					"options": [
						{
							"id": "cat-op0",
							"value": "all",
							"label": "All"
						},
						{
							"id": "cat-op1",
							"value": "cat-op1",
							"label": "Community Support"
						},
						{
							"id": "cat-op2",
							"value": "cat-op2",
							"label": "Support for Marriage and Parenthood"
						},
						{
							"id": "cat-op3",
							"value": "cat-op3",
							"label": "Work-life Harmony"
						}
					]
				}
			},
      {
				'type': 'select',
				'settings': {
					"input": {
						"name": "tags",
						"id": "tags",
						"label": "Tags"
					},
					"options": [
						{
							'label': 'All',
							'value': 'all'
						},
						{
							'label': 'Child Development',
							'value': 'childdevelopment'
						},
            {
							'label': 'Child Education',
							'value': 'childeducation'
						},
            {
							'label': 'Tax Reliefs',
							'value': 'taxreliefs'
						}
					]
				}
			},
			{
				'type': 'select',
				'settings': {
					"input": {
						"name": "sortby",
						"id": "sortby",
						"label": "Sort By"
					},
					"options": [
						{
							'label': 'Latest',
							'value': 'latest'
						},
						{
							'label': 'Popularity',
							'value': 'popularity'
						}
					]
				}
			}
		],
    'btnFilter': true,
		'pagination': '/listing-filter'
	})

	+listingItem()